description="Sets the hostname of the machine."

depend() {
	keyword -prefix -lxc
}

start()
{
	hostname=${hostname-${HOSTNAME-localhost}}
	ebegin "Setting hostname to $hostname"
	hostname "$hostname"
	eend $? "Failed to set the hostname"
}
